<Window x:Class="Wether.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wether"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <ComboBox 
            x:Name="Days"
            SelectionChanged="SelectDays"
            VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="10"/>
        <Button Content="Обновить данные" Width="200" Margin="0,10,10,0" VerticalAlignment="top" HorizontalAlignment="Right" Click="UpdateWeather"  />
        <TextBox x:Name="CityBox" Width="200" Height="25" Margin="229,10,0,0"
         VerticalAlignment="Top" HorizontalAlignment="Left"
         Text="Введите город" />

        <Button Content="Найти" Width="100" Height="25"
        Margin="456,8,0,0"
        VerticalAlignment="Top" HorizontalAlignment="Left"
        Click="FindCity" />
        <ScrollViewer Margin="10,37,10,10">
            <StackPanel x:Name="parent">

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
